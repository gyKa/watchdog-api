#!/usr/bin/env php
<?php

require __DIR__ . '/../vendor/autoload.php';

use GuzzleHttp\Client;
use Command\WatchCommand;
use Symfony\Component\Console\Application;

$config = new Dotenv\Dotenv(dirname(__DIR__));
$config->load();
$config->required('API_ENDPOINT')->notEmpty();

$application = new Application('watchdog');
$client = new Client();

$application->add(new WatchCommand($client));

$application->run();
